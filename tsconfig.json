{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./lib/types",
    "esModuleInterop": true,
    "lib": [
      "ES2021"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "./node_modules"
  ]
}
